<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:textColor="#000000"
    tools:context=".StudyDateTimeSelectActivity">

    <RelativeLayout
        android:id="@+id/studyCategoryTitleBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#7993E1"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Study Group"
            android:textColor="#FFFFFF"
            android:textSize="12pt"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/homeBTN"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="6sp"
            android:layout_marginTop="6sp"
            android:layout_marginEnd="6sp"
            android:layout_marginBottom="6sp"
            android:background="#58ACFA"
            android:scaleType="centerInside"
            android:src="@drawable/home"
            tools:src="@drawable/home" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/studyCategorySubTitleBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="15dp"
            android:text="스터디 세부 설정"
            android:textColor="#000000"
            android:textSize="10pt"
            android:textStyle="bold" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#D8D8D8" />

    <CalendarView
        android:id="@+id/calendarView"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 시간 : "
            android:textColor="#000000"
            android:textSize="17sp" />

        <TextClock
            android:id="@+id/textClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="17sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#D8D8D8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#000000"
            android:text="스터디룸 예약 시작시간" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick3"
                android:text="날짜 정하기" />

            <Button
                android:id="@+id/btnTime1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onclick3"
                android:text="시간 정하기" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#000000"
            android:text="스터디룸 예약 종료시간" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick3"
                android:text="날짜 정하기" />

            <Button
                android:id="@+id/btnTime2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onclick"
                android:text="시간 정하기" />
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#81BEF7"
        android:textSize="17sp"
        android:textColor="#000000"
        android:text="예약 확정하기" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/studyGroupBT"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:text="StudyGroup"
            android:textColor="#000000"
            android:textSize="7pt"
            android:textStyle="bold" />

        <Button
            android:id="@+id/studyRoomBT"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:text="StudyRoom"
            android:textColor="#000000"
            android:textSize="7pt"
            android:textStyle="bold" />

        <Button
            android:id="@+id/chattingBT"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:text="Chatting"
            android:textColor="#000000"
            android:textSize="7pt"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>