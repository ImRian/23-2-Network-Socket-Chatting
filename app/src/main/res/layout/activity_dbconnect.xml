<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:textColor="@android:color/black"
    android:orientation="vertical"
    tools:context=".DBConnectActivity">

    <RelativeLayout
        android:id="@+id/studyCategoryTitleBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#7993E1"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Admin"
            android:textColor="#FFFFFF"
            android:textSize="12pt"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/homeBTN"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="6sp"
            android:layout_marginTop="6sp"
            android:layout_marginEnd="6sp"
            android:layout_marginBottom="6sp"
            android:background="#7993E1"
            android:scaleType="centerInside"
            android:src="@drawable/home"
            tools:src="@drawable/home" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/studyCategorySubTitleBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스터디 카테고리"
            android:textSize="10pt"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="스터디 현황을 조회할 수 있습니다."
        android:textSize="7pt"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:paddingLeft="15dp"/>

    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:textColor="@android:color/black"
        android:entries="@array/category_array" />

    <ListView
        android:id="@+id/groupListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:padding="30dp"
        android:textColor="@android:color/black" />

</LinearLayout>
