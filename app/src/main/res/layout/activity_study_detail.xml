<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudyCategoryActivity">

    <TextView
        android:id="@+id/studyCategoryTitle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#7993E1"
        android:gravity="center"
        android:text="StudyGroup"
        android:textColor="#FFFFFF"
        android:textSize="11pt" />

    <TextView
        android:id="@+id/studyCategorySubTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:text="스터디 그룹 관리"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="11pt"
        android:paddingLeft="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#D8D8D8" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category: "
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="11pt"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp"></TextView>

        <TextView
            android:id="@+id/categoryTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="네트워크"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="10pt"
            android:paddingLeft="10dp"
            ></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Periods: "
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="11pt"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"></TextView>

        <TextView
            android:id="@+id/periodTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023-11-30~2023-12-31"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="9pt"
            android:paddingLeft="10dp"></TextView>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Member"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="11pt"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingTop="40dp"
        android:paddingBottom="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/member1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이찬미"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="9pt"
            android:paddingLeft="60dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"></TextView>

        <TextView
            android:id="@+id/member2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최다영"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="9pt"
            android:paddingLeft="160dp"></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/member3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="임리안"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="9pt"
            android:paddingLeft="60dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"></TextView>

        <TextView
            android:id="@+id/member4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최세인"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="9pt"
            android:paddingLeft="160dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/member5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이다온"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="9pt"
            android:paddingLeft="60dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="StudyRoom : "
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="11pt"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingTop="40dp"
        android:paddingBottom="10dp"
        />

        <TextView
            android:id="@+id/studyRoomTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2F G2C"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="10pt"
            android:paddingLeft="10dp"></TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/studyRoomDay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="월요일 16시~18시"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="9pt"
            android:paddingLeft="60dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"></TextView>

        <TextView
            android:id="@+id/studyRoomDay2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수요일 16시~18시"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="9pt"
            android:paddingLeft="60dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"></TextView>


    </LinearLayout>






    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#D8D8D8" />



    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#D8D8D8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/studyGroupBTN"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:text="StudyGroup"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="7pt"/>

        <Button
            android:id="@+id/studyRoomBTN"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:text="StudyRoom"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="7pt"/>

        <Button
            android:id="@+id/chattingBTN"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:text="Chatting"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="7pt"/>

    </LinearLayout>


</LinearLayout>