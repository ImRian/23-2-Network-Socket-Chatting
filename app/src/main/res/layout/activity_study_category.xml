<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudyCategoryActivity">

    <TextView
        android:id="@+id/studyCategoryTitle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#7993E1"
        android:gravity="center"
        android:text="StudyGroup"
        android:textColor="#FFFFFF"
        android:textSize="11pt" />

    <TextView
        android:id="@+id/studyCategorySubTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:text="스터디 카테고리"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="11pt"
        android:paddingLeft="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#D8D8D8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/search" />

        <EditText
            android:id="@+id/findStudyBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:inputType="text"
            android:text="스터디를 검색하세요" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/javaStudyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:gravity="left"
            android:text="JAVA - 코딩테스트                   >"
            android:textColor="#000000"
            android:textSize="11pt"
            android:textStyle="bold" />

        <Button
            android:id="@+id/jsStudyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:gravity="left"
            android:text="JS - 코딩테스트                        >"
            android:textColor="#000000"
            android:textSize="11pt"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cStudyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:gravity="left"
            android:text="C - 코딩테스트                          >"
            android:textColor="#000000"
            android:textSize="11pt"
            android:textStyle="bold" />

        <Button
            android:id="@+id/networkStudyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:gravity="left"
            android:text="네트워크                                    >"
            android:textColor="#000000"
            android:textSize="11pt"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#D8D8D8" />

    <Button
        android:id="@+id/addCategoryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:layout_gravity="center"
        android:text="+ 직접 추가"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="9pt"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#D8D8D8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/studyGroupBTN"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:text="StudyGroup"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="7pt"/>

        <Button
            android:id="@+id/studyRoomBTN"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:text="StudyRoom"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="7pt"/>

        <Button
            android:id="@+id/chattingBTN"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:text="Chatting"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="7pt"/>

    </LinearLayout>


</LinearLayout>