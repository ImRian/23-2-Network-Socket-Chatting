<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".StudyCategoryActivity">

    <RelativeLayout
        android:id="@+id/studyCategoryTitleBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#7993E1"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Study Group"
            android:textSize="12pt"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_centerInParent="true" />

        <ImageButton
            android:id="@+id/homeBTN"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="6sp"
            android:layout_marginTop="6sp"
            android:layout_marginEnd="6sp"
            android:layout_marginBottom="6sp"
            android:background="#58ACFA"
            android:scaleType="centerInside"
            android:src="@drawable/home"
            tools:src="@drawable/home" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/studyCategorySubTitleBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스터디 카테고리"
            android:textSize="10pt"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#D8D8D8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/search" />

        <EditText
            android:id="@+id/findStudyBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:inputType="text"
            android:text="스터디를 검색하세요" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">

        <Button
            android:id="@+id/javaStudyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:gravity="left"
            android:text="JAVA - 코딩테스트                   >"
            android:textColor="#000000"
            android:textSize="11pt"
            android:textStyle="bold" />

        <Button
            android:id="@+id/jsStudyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:gravity="left"
            android:text="JS - 코딩테스트                        >"
            android:textColor="#000000"
            android:textSize="11pt"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cStudyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:gravity="left"
            android:text="C - 코딩테스트                          >"
            android:textColor="#000000"
            android:textSize="11pt"
            android:textStyle="bold" />

        <Button
            android:id="@+id/networkStudyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:gravity="left"
            android:text="네트워크                                    >"
            android:textColor="#000000"
            android:textSize="11pt"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#D8D8D8" />

        <Button
            android:id="@+id/addCategoryBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#FFFFFF"
            android:text="+ 직접 추가"
            android:textColor="#000000"
            android:textSize="9pt"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#D8D8D8" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/studyGroupBTN"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:text="StudyGroup"
            android:textColor="#000000"
            android:textSize="7pt"
            android:textStyle="bold" />

        <Button
            android:id="@+id/studyRoomBTN"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:text="StudyRoom"
            android:textColor="#000000"
            android:textSize="7pt"
            android:textStyle="bold" />

        <Button
            android:id="@+id/chattingBTN"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:text="Chatting"
            android:textColor="#000000"
            android:textSize="7pt"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>